/* pages/bookup/bookup.wxss */
/* 未支付弹窗div */
#UnpaidOrder_div{
  z-index: 10;
  display: flex;
  justify-content: center;
  align-items: center;
  position: absolute;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(2px);
}

#UnpaidOrder_div_cen{
  background: #ffffff;
  border-radius: 10px;
  border: #dfebfb solid 2px;
  width: 90%;
  height: 20%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

#UnpaidOrder_div_cen_title{
  font-weight: bolder;
  color: #07c160;
  width: auto;
  height: auto;
}

#UnpaidOrder_div_content{
  width: auto;
  height: auto;
}

#UnpaidOrder_div_choose{
  display: inline-flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-around;
  width: 70%;
  height: auto;
}

/* 正文 */
#content{
  width: 100%;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  background: #ebfffa;
}

#title{
  width: 100vw;
  font-size: 1.3em;
  text-align: center;
  text-shadow: 2px 2px #ffffff;
  letter-spacing: 0.2em;
  font-weight: bold;
  color: #1e2732;
}

#content_lay{
  width: 90%;
}

#content li{
  color: #1c5a70;
  font-weight: bold;
  width: 100%;
  display: block;
  padding: 5px 0;
  margin: 5px 0;
  background: #d5ebf2;
  border-radius: 10px;
}

.usrInput{
    color: #38b3e0;
}

#priceinfo{
  display: block;
  font-size: 0.8em;
  color: #808080;
}

#note{
  width: 100%;
  height: 5em;
}

#submit{
  background: #00aeec;
  transition: 100ms;
}

#submit:active{
  background: #69d4fa;
}

#orderform{
  background: #000;
}
