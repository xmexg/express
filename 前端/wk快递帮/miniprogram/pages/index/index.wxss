/* pages/index/index.wxss */
#top{
  height: 20vh;
  min-height: 100px;
  max-height: 200px;
  width: 100%;
  background: linear-gradient(0deg,#fff,#00aeec);
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

#top_pic{
  width: 90%;
  height: 90%;
}

#top_pic_img{
  width: 100%;
  height: 100%;
  border-radius: 10px;
}

#content{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  margin: 20px 0;
}

#content_lay{
  width: 90%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  padding: 10px 0;
  /* background: #000; */
}

#content_lay view{
  color: #1c5a70;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(218, 244, 253, 0.5);
  border-radius: 10px;
  border: #6b798e solid 2px;
  width: 90%;
  height: 50px;
  margin: 10px;
}

.content_lay_img{
  /* background: #000; */
  position: absolute;
  height: 80%;
  width: 20%;
  left: 0;
  z-index: -1;
}

#note{
  width: 80%;
  position: absolute;
  right: 0;
  color: #c92a2a;
}